<!-- Main menu section: -->
<%= render( :partial => AGEX_APP + '/main_menu') %>

<h1><%= t(:musicians, {:scope=>[:agex_action]}) %></h1>

<%= netzke :musician_management_panel, {
	:class_name => "EntityGrid",
	:model => 'Musician',
	:title => t(:musicians, {:scope=>[:agex_action]}),
	:width => "98%",
	:height => 500,
	:border => true,
	:view_config => {
		:force_fit => true # force the columns to occupy all the available width
	},
	:strong_default_attrs => {
		:user_id => @user_id
	},

	:prevent_header => true,
	:add_form_window_config => { :width => 500, :title => "#{I18n.t(:add)} #{t(:musician, {:scope=>[:activerecord, :models]})}" },
	:edit_form_window_config => { :width => 500, :title => "#{I18n.t(:edit)} #{t(:musician, {:scope=>[:activerecord, :models]})}" },

	:columns => [
	    { :name => :name, :label => I18n.t(:name), :width => 250, :summary_type => :count },
	    { :name => :nickname, :label => I18n.t(:nickname, {:scope=>[:activerecord, :attributes, :musician]}), :width => 150 },
	    { :name => :description,  :label => I18n.t(:description),   :flex => 1 }
	]
} %>
